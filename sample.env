# Alita Robot Configuration
# Copy this file to .env and fill in your values

# ========================
# REQUIRED CONFIGURATION
# ========================

# Bot token from @BotFather
BOT_TOKEN=

# MongoDB connection URI
# Example: mongodb://localhost:27017/alita or mongodb+srv://user:pass@cluster.mongodb.net/
DB_URI=

# Bot owner's Telegram user ID (get from @userinfobot)
OWNER_ID=

# Chat ID where bot logs and startup messages will be sent
# Can be a group chat ID (negative number) or user ID
MESSAGE_DUMP=

# ========================
# OPTIONAL CONFIGURATION
# ========================

# Bot version (defaults to 2.1.3)
BOT_VERSION=

# Database name (defaults to Alita_Robot)
DB_NAME=

# Enable debug logging (true/false, yes/no, 1/0 - defaults to false)
DEBUG=

# Drop pending updates on startup (true/false, yes/no, 1/0 - defaults to true)
DROP_PENDING_UPDATES=

# Telegram API server (defaults to https://api.telegram.org)
# Useful for local bot API server
API_SERVER=

# Comma-separated list of enabled locale codes (defaults to en)
# Example: en,ru,es,fr
ENABLED_LOCALES=

# Comma-separated list of allowed Telegram update types
# If not set, all update types will be received
# Example: message,callback_query,inline_query
ALLOWED_UPDATES=

# If the bot is using webhooks or not
USE_WEBHOOKS=

# ========================
# REDIS CONFIGURATION
# ========================

# Redis server address (defaults to localhost:6379)
REDIS_ADDRESS=

# Redis password (leave empty if no password)
REDIS_PASSWORD=

# Redis database number (defaults to 0)
REDIS_DB=